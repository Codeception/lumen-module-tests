{
    "name": "codeception/lumen-module-tests",
    "description": "Codeception Lumen Module tests",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Nieves",
            "homepage": "https://medium.com/@ganieves"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "laravel/lumen-framework": "^8.3"
    },
    "require-dev": {
        "codeception/codeception": "^5.0.0-RC1",
        "codeception/module-asserts": "^3.0",
        "codeception/module-lumen": "^3.0",
        "codeception/module-phpbrowser": "^3.0",
        "fakerphp/faker": "^1.16"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "psr-4": {
            "Tests\\": [
                "tests/",
                "tests/_build/support"
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.testing', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"fopen('database/database.sqlite', 'w');\"",
            "@php artisan migrate --seed"
        ]
    }
}
