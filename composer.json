{
    "name": "codeception/lumen-module-tests",
    "description": "Codeception Lumen Module tests",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Nieves",
            "homepage": "https://medium.com/@ganieves"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-pdo": "*",
        "laravel/lumen-framework": "^6.3"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.3",
        "codeception/module-lumen": "^1.0 | *@dev",
        "codeception/module-phpbrowser": "^1.0",
        "fakerphp/faker": "^1.13",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.3.0"
        }
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "psr-4": {
            "Tests\\": [
                "tests/",
                "tests/_build/support"
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.testing', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"fopen('database/database.sqlite', 'w');\"",
            "@php artisan migrate --seed"
        ]
    }
}
